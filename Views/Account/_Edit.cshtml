@model User

<div class="modal fade" id="editProfileModal" tabindex="-1" aria-labelledby="editProfileModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editProfileModalLabel">Редактирование профиля</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editProfileForm" enctype="multipart/form-data">
                    <input type="hidden" id="editUserId" name="UserId" value="@Model.Id" />
                    <input type="hidden" id="editIsAdmin" name="IsAdmin" value="false" />
                    <div class="mb-3">
                        <label for="editUserName" class="form-label">Логин</label>
                        <input type="text" class="form-control" id="editUserName" name="UserName" value="@Model.UserName" />
                        <span class="text-danger" id="editUserNameValidation"></span>
                    </div>
                    <div class="mb-3">
                        <label for="editNickName" class="form-label">Никнейм</label>
                        <input type="text" class="form-control" id="editNickName" name="NickName" value="@Model.NickName" />
                        <span class="text-danger" id="editNickNameValidation"></span>
                    </div>
                    <div class="mb-3">
                        <label for="editEmail" class="form-label">Email</label>
                        <input type="email" class="form-control" id="editEmail" name="Email" value="@Model.Email" />
                        <span class="text-danger" id="editEmailValidation"></span>
                    </div>
                    <div class="form-group">
                        <label for="editImageFile">Изображение</label>
                        <input type="file" class="form-control" id="editImageFile" name="ImageFile" />
                        <span class="text-danger" id="editImageFileValidation"></span>
                    </div>
                    <div class="text-danger" id="editFormErrors"></div>

                    <button type="submit" class="btn btn-primary">Сохранить изменения</button>
                </form>
            </div>
        </div>
    </div>
</div>
