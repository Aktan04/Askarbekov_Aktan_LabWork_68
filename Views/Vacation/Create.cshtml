@model Vacation

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Создать вакансию</h2>

<form asp-action="Create" method="post">
    @Html.ValidationSummary(true)
    <div class="form-group">
        <label asp-for="Title">Название вакансии</label>
        <input asp-for="Title" type="text" class="form-control" id="Title" required/>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Salary">Заработная плата</label>
        <input asp-for="Salary" type="number" class="form-control" id="Salary" required/>
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Requirement">Детальное описание вакансии</label>
        <textarea asp-for="Requirement" class="form-control" id="Description" required></textarea>
        <span asp-validation-for="Requirement" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ExperienceFrom">Опыт работы от (лет)</label>
        <input asp-for="ExperienceFrom" type="number" class="form-control" id="ExperienceFrom" required/>
        <span asp-validation-for="ExperienceFrom" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="ExperienceTo">Опыт работы до (лет)</label>
        <input asp-for="ExperienceTo" type="number" class="form-control" id="ExperienceTo" required/>
        <span asp-validation-for="ExperienceTo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId">Категория вакансии</label>
        <select class="form-control" id="CategoryId" name="CategoryId" required>
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Создать</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}