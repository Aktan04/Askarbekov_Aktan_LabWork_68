@model Category

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Заполните форму для добавления категории</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label asp-for="Name" class="fs-2">Наименование</label>
                <input asp-for="Name" class="form-control" placeholder="Введите наименование">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary mt-2">Создать</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}