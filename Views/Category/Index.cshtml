@model List<Category>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Категории</h2>

<a asp-action="Create" asp-controller="Category" class="btn btn-primary mb-3">Добавить категорию</a>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Наименование</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        @if (Model.Count == 0)
        {
            <tr>
                <td colspan="3" class="text-center">Категории еще не добавлены</td>
            </tr>
        }
        else
        {
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>
                       
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>

